{
  "manifest_version": 2,
  "name": "YouTube Timestamps",
  "description": "Automatically creates timestamps for YouTube videos",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
